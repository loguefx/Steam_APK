<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gamehub_background"
    android:orientation="vertical">

    <!-- Top bar: LB | My | Discover | Find games | RB, search -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/gamehub_toolbar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:text="@string/controller_lb"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/TabMy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="@string/home_my"
            android:textColor="@color/gamehub_text_primary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TabDiscover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="@string/steam_discover"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/TabFindGames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="@string/steam_find_games"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:text="@string/controller_rb"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="11sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/BtnSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/controller_y_search"
            android:focusable="true"
            android:padding="8dp"
            app:srcCompat="@android:drawable/ic_menu_search"
            app:tint="@color/gamehub_text_secondary" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/HomeGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="8dp" />

    <!-- Controller hints bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/gamehub_surface"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A "
            android:textColor="@color/gamehub_accent"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/steam_play"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="12sp" />

        <View android:layout_width="24dp" android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y "
            android:textColor="@color/gamehub_accent"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/controller_y_search"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="12sp" />

        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B "
            android:textColor="@color/gamehub_accent"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/controller_b_back"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
