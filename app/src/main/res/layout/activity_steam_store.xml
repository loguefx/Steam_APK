<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gamehub_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/SteamStoreToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/gamehub_toolbar"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/gamehub_text_primary"
        app:navigationIconTint="@color/gamehub_text_primary" />

    <WebView
        android:id="@+id/SteamStoreWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gamehub_background" />
</LinearLayout>
