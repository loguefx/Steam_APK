<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gamehub_background"
    android:orientation="vertical">

    <!-- Top bar: LB | My Games | Discover | Find games | RB, search -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/gamehub_toolbar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gamehub_tab_hint_bg"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="@string/controller_lb"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/TabMy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/gamehub_tab_pill_bg"
            android:focusable="true"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:text="@string/steam_library"
            android:textColor="@color/gamehub_text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TabDiscover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/gamehub_tab_pill_bg"
            android:focusable="true"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:text="@string/steam_discover"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TabStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/gamehub_tab_pill_bg"
            android:focusable="true"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:text="@string/steam_find_games"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/gamehub_tab_hint_bg"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="@string/controller_rb"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="11sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/BtnSearch"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/controller_y_search"
            android:focusable="true"
            android:padding="10dp"
            app:srcCompat="@android:drawable/ic_menu_search"
            app:tint="@color/gamehub_text_secondary" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:contentDescription="@string/controller_menu"
            android:padding="10dp"
            app:srcCompat="@android:drawable/ic_menu_my_calendar"
            app:tint="@color/gamehub_text_secondary" />
    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/SteamLibraryRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SteamLibraryEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="24dp"
                android:text="@string/steam_library_empty"
                android:textColor="@color/gamehub_text_secondary"
                android:visibility="gone" />

            <TextView
                android:id="@+id/LabelRecentlyPlayed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/steam_recently_played"
                android:textColor="@color/gamehub_text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/SteamRecentlyPlayed"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:clipToPadding="false"
                android:paddingVertical="8dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/LabelAllGames"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/steam_all_games"
                    android:textColor="@color/gamehub_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/SteamGameCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gamehub_text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/SteamLibraryGrid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp" />
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Controller hints bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/gamehub_card"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A "
            android:textColor="@color/gamehub_accent"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/steam_play"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="12sp" />

        <View android:layout_width="24dp" android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y "
            android:textColor="@color/gamehub_accent"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/controller_y_search"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="12sp" />

        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B "
            android:textColor="@color/gamehub_accent"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/controller_b_back"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
