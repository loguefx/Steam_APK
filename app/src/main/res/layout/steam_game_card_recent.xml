<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="6dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/gamehub_card"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/SteamGameImage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            android:background="@color/gamehub_surface" />

        <TextView
            android:id="@+id/SteamGameName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="6dp"
            android:textColor="@color/gamehub_text_primary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/SteamGamePlaytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="6dp"
            android:paddingBottom="6dp"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="11sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
