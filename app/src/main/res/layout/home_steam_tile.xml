<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:minHeight="160dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#1a3a52"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/SteamTileIcon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_steam"
            app:tint="@color/gamehub_text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="STEAM"
            android:textColor="@color/gamehub_text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/SteamTileHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/tile_action_open"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/SteamTileDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/steam_tile_description"
            android:textColor="@color/gamehub_text_secondary"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.15" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
