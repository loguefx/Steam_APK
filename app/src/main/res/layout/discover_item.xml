<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:background="@color/gamehub_surface"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginEnd="12dp">

    <TextView
        android:id="@+id/DiscoverItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gamehub_text_primary"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/DiscoverItemSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/gamehub_text_secondary"
        android:textSize="13sp"
        android:maxLines="2"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/DiscoverItemBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/gamehub_accent"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:textColor="@android:color/white"
        android:textSize="11sp" />
</LinearLayout>
